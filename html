  <script>
    const pool = [
      {name:'Ujang Kopling',h:168,w:66,loc:'Ciassem Girang'},
      {name:'Bayu Cilok',h:175,w:75,loc:'Pangungsen'},
      {name:'Cecep suka cp',h:162,w:58,loc:'Ampera'},
      {name:'Dedi bukan mulyadi',h:180,w:85,loc:'Margamulya'},
      {name:'Fajar oli gardan',h:170,w:64,loc:'Karang Anyar'},
      {name:'Asep',h:172,w:70,loc:'Margasari'},
      {name:'Gilang ojol',h:165,w:60,loc:'Sengon Lio'},
      {name:'Husen Komstir',h:169,w:63,loc:'Ciasem Baru'},
      {name:'Joko Carpenter',h:182,w:88,loc:'Rajapolah'},
      {name:'Dilan 2013',h:177,w:78,loc:'Ciasem'}
    ];

    const form = document.getElementById('matchForm');
    const statusBox = document.getElementById('statusBox');
    const mapCanvas = document.getElementById('mapCanvas');
    const resultArea = document.getElementById('resultArea');
    const toast = document.getElementById('toast');
    const resetBtn = document.getElementById('resetBtn');

    function setStatus(title, sub){
      statusBox.innerHTML = `<strong>${title}</strong><div class="muted">${sub}</div>`;
    }

    function showLoading(){
      setStatus('Mencocokkan lawan...', 'Sedang mencari calon lawan yang pas');
      resultArea.innerHTML = `
        <div style="display:flex;align-items:center;gap:12px">
          <div class="loader">
            <div class="pulse"></div>
            <div class="pulse delay"></div>
            <div class="pulse delay2"></div>
          </div>
          <div class="muted">Mencari di jaringan global...</div>
        </div>`;
      mapCanvas.innerHTML = '';
      for(let i=0;i<10;i++){
        const d=document.createElement('div');
        d.style.width='8px';
        d.style.height='8px';
        d.style.borderRadius='50%';
        d.style.position='absolute';
        d.style.left=(10+Math.random()*80)+'%';
        d.style.top=(8+Math.random()*84)+'%';
        d.style.background='rgba(11,116,255,0.85)';
        d.style.opacity=0.7;
        mapCanvas.appendChild(d);
      }
    }

    function findOpponent(userH,userW,range){
      const tolerance = range==='near'? {h:6,w:8} : {h:20,w:20};
      const filtered = pool.filter(p=>Math.abs(p.h-userH)<=tolerance.h && Math.abs(p.w-userW)<=tolerance.w);
      return filtered.length? filtered[Math.floor(Math.random()*filtered.length)] : pool[Math.floor(Math.random()*pool.length)];
    }

    form.addEventListener('submit', e=>{
      e.preventDefault();
      const h=+document.getElementById('height').value;
      const w=+document.getElementById('weight').value;
      const range=document.getElementById('range').value;

      showLoading();

      setTimeout(()=>{
        const opp=findOpponent(h,w,range);
        setStatus('Lawan Ditemukan','Kirim undangan kalau mau tantang lawan ini');
        resultArea.innerHTML=`
          <div class="opponent-card">
            <div class="avatar">${opp.name[0]}</div>
            <div style="flex:1">
              <div style="font-weight:700">${opp.name}</div>
              <div class="muted">Lokasi: ${opp.loc}</div>
              <div class="muted">Tinggi: ${opp.h} cm ‚Ä¢ Berat: ${opp.w} kg</div>
            </div>
            <button class="primary" id="inviteBtn">Kirim Undangan</button>
          </div>`;

        mapCanvas.innerHTML = '<div class="monument">üìç Lawan ditemukan</div>';
        document.getElementById('inviteBtn').addEventListener('click', ()=>{
          toast.style.display='block';
          toast.textContent='Undangan terkirim ‚Äî menunggu konfirmasi...';
          setStatus('Undangan Terkirim','Menunggu konfirmasi lawan...');
          const delay=2000+Math.random()*4000;
          setTimeout(()=>{
            const accepted=Math.random()<0.7;
            if(accepted){
              toast.textContent=`${opp.name} menerima undangan! ‚öîÔ∏è`;
              setStatus('Lawan Menerima','Siap duel ‚Äî persiapkan dirimu!');
            }else{
              toast.textContent=`${opp.name} menolak undangan üò§`;
              setStatus('Undangan Ditolak','Lawan menolak ‚Äî coba lagi.');
            }
            setTimeout(()=>toast.style.display='none',4000);
          },delay);
        });
      },1600);
    });

    resetBtn.addEventListener('click', ()=>{
      form.reset();
      document.getElementById('height').value=170;
      document.getElementById('weight').value=65;
      document.getElementById('range').value='near';
      setStatus('Belum mencari lawan','Isi data lalu klik "Mulai Cari Lawan"');
      resultArea.innerHTML='';
      mapCanvas.innerHTML='<div class="monument">(visual peta sederhana)</div>';
      toast.style.display='none';
    });

    setStatus('Belum mencari lawan','Isi data lalu klik "Mulai Cari Lawan"');
  </script>
</body>
